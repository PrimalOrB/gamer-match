
<div class="head-card">
{{> games-title game}}
</div> 

<div id="game-wrapper">
  
  <div id="game-owners">
    <div class = 'subheader'>
    <h2>Other Game Owners</h2>
    </div>
    <ol id="game-players">
    {{#each game.played_by as |user| }} 
      <li>
        {{> users-list user }}
      </li>
    {{/each}}
    </ol>
  </div>

  <div id="game-comments">
    <div class = 'subheader'>
    <h2>Game Discussion</h2>
    </div>
    {{#if loggedIn}}
    <form class="new-comment-form" autocomplete="off">
        <div id="comment-div">
            <label for="comment-content">New Comment</label>
            <textarea id="comment-content" name="post-content" rows="2" /></textarea>
        </div>
        <button type="submit" class="btn">Post</button>
    </form>
    {{/if}}
    <ol id="game-comments-list">
    {{#each game.comments as |comments| }} 
      <li class="comment">
        {{> comment-list comments }}
      </li>
    {{/each}}
    </ol>
  </div>

</div>
